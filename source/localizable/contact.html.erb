---
title:
  es: Contacta
  en: Contact us
  ca: Contacte
description:
---

<div class="container container-vertical">
  <div class="container--small-col">
    <h1 class="page-title"><%= t('.contact.title') %></h1>
    <form method="post" action="<%= t('.thanks.path') %>" name="contact-en" netlify-honeypot="bot-field" data-netlify="true">
      <p class="visually-hidden">
      <label><%= t('.contact.no_fill_human') %> <input name="bot-field" /></label>
      </p>
      <div class="form-field">
        <label for="name">
        <%= t('.contact.name') %> <span class="required" aria-label="required field">*</span>
        </label>
        <input type="text" id="name" name="name" required/>
      </div>
      <div class="form-field">
        <label for="entity"><%= t('.contact.entity') %></label>
        <input type="text" id="entity" name="entity" />
      </div>
      <div class="form-field">
        <label for="email"><%= t('.contact.email') %> <span class="required" aria-label="required field">*</span></label>
        <input type="email" id="email" name="email" required/>
      </div>
      <div class="form-field">
        <label for="reason"><%= t('.contact.reason') %> <span class="required" aria-label="required field">*</span></label>
        <select id="reason" name="reason" required>
          <option value=""></option>
          <option value="Press/communication"><%= t('.contact.reasons.press') %></option>
          <option value="Investigation"><%= t('.contact.reasons.investigation') %></option>
          <option value="Development"><%= t('.contact.reasons.development') %></option>
          <option value="Extension"><%= t('.contact.reasons.extension') %></option>
          <option value="More information"><%= t('.contact.reasons.more') %></option>
        </select>
      </div>
      <div class="form-field message">
        <label for="message"><%= t('.contact.message') %> <span class="required" aria-label="required field">*</span></label>
        <textarea id="message" name="message" required></textarea>
      </div>
      <div class="form-field">
        <button type="submit" class="btn btn--primary"><%= t('.contact.send') %></button>
      </div>
    </form>
  </div>
</div>

<div class="blog container container-vertical-top">
  <div class="container--text-col">
    <% blog.articles_by_locale.each do |article| %>
      <article class="post-preview">
        <h2 class="page-title page-title--simplemargin">
          <a href="<%= article.url %>"><%= article.title %></a>
          <time class="post-date"><%= article.date.strftime('%Y.%m.%d') %></time>
        </h2>

        <%= article.summary %>

        <a href="<%= article.url %>" class="post-preview__more">Tovább olvas</a>
      </article>
    <% end %>
    <button id="paginate-control" class="btn btn--primary paginate-control is-paginate-control-hidden">Továbbiak</button>
  </div>
</div>
